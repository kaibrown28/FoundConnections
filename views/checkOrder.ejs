           <div class="box">
            <h3><%=services[i].name%></h3>   
            <h3><%=services[i].store%></h3>
            <h3><%=services[i].service%></h3>
            <a class="button notification is-warning"href="/<%=services[i].id%>/editservice">Edit Your Appointment</a>
           </div>
           <% } %>

       </div>   
    <%- include ('./partials/footer.ejs') %>
